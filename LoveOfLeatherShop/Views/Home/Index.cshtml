
@using LoveOfLeatherShop.Models
@{
    ViewBag.Title = "Love Of Leather";
}

<! DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Love of Leather Shop</title>
    <meta name="description" content="">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed|Rye" rel="stylesheet">
</head>
    <body>
        <div id="siteWrapper" class="clearfix">
            <header id="header">
                <div id="logo">
                    <img src="/Content/image/Logos/lollogotop.jpg">
                    <p>HAND CRAFTED LEATHER GOODS</p>
                </div>
            </header>
        </div>
            <main>
                <div class="banner">
                    <img src="/Content/image/Logos/banner.jpg">
